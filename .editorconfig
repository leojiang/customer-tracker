root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 100

[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2
tab_width = 2

[*.{json,yml,yaml,md}]
indent_style = space
indent_size = 2
